@using VarBal.Models;
@model List<Address>
@{
    ViewBag.Title = "AllAddress";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    int i = 0;
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">


            <!-- Start row-->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">

                                <div class="col-12 mb-3">


                                    <h4 class="mt-0 header-title">All Addresses</h4>
                                    <p class="text-muted font-14 mb-3 float-start">
                                        You can see your registered addresses here

                                    </p>

                                    <a class="btn btn-success float-end" href="~/Adress/Add"><i class="fa fa-plus"></i> Add New Address</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">

                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Title</th>
                                                <th>Country</th>
                                                <th>City</th>
                                                <th>District</th>
                                                <th>Post Code</th>
                                                <th>Status</th>
                                                <th>Edit</th>
                                                <th>Select</th>
                                                <th>Delete</th>


                                            </tr>
                                        </thead>


                                        <tbody>


                                            @foreach (var item in Model)
                                            {
                                                i++;

                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.Title</td>
                                                    <td>@item.Country</td>
                                                    <td>@item.City</td>
                                                    <td>@item.District</td>
                                                    <td>@item.PostCode</td>

                                                    @{ var select = item.Selection == true ? "btn-success" : "btn-danger";
                                                        var status = item.Status == true ? "btn-success" : "btn-danger"; }
                                                    <td><a href="~/Adress/AddressStatusEdit?id=@item.Id" class="btn  @status">@item.Status</a></td>

                                                    <td>
                                                        <a href="~/Adress/Edit?id=@item.Id" class="btn btn-success"><i class="fa fa-map-marker-alt"></i></a>

                                                    </td>
                                                    <td><a href="~/Adress/Select?id=@item.Id" class="btn  @select">@item.Selection</a></td>

                                                    <td>
                                                        <a href="~/Adress/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>

                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- end row -->


                </div>
                <!-- container-fluid -->

            </div> <!-- content -->


        </div>
    </div>
</div>
