                        <i class="mdi @item.Icon"></i>
                    </div>
                    <p class="notify-details">@item.NameSurname <small class="text-secondary">@item.Date</small></p>
                    <p class="text-muted mb-0 user-msg">
                        <small>@item.Content</small>
                    </p>
                </a>
            }

