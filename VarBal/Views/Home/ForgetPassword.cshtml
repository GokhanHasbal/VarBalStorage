
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Register & Signup | Decathlon</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Content/Panel/assets/images/favicon.ico">

    <!-- App css -->

    <link href="~/Content/Panel/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- icons -->
    <link href="~/Content/Panel/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="loading bg-secondary">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div class="text-center mb-5">
                        <img src="~/Content/Panel/assets/images/logo-light.png" alt="" height="22" class="mx-auto">

                    </div>
                    <div class="card">

                        <div class="card-body p-4">

                            <div class="text-center mb-4">
                                <h4 class="text-uppercase mt-0">Forget Password</h4>
                            </div>

                            @using (Html.BeginForm())
                            {

                                <div class="mb-3">
                                    <label for="Email" class="form-label">Email address</label>
                                    @Html.TextBox("Email", null, new { @class = "form-control", required = "required", type = "email", placeholder = "Email Address" })
                                </div>


                                <div class="mb-3 text-center d-grid">
                                    <button class="btn btn-primary" type="submit">
                                        @*Send Mail*@
                                        Şifre Gör
                                    </button>
                                </div>
                                <h4>@Html.Raw(ViewBag.mesaj)</h4>
                            }

                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-muted">Already have account?  <a href="~/Home/Login" class="text-dark ms-1"><b>Login</b></a> or <a href="~/Admin/Register" class="text-dark ms-1"><b>Register</b></a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- Vendor -->
    <script src="~/Content/Panel/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/Content/Panel/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Panel/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Content/Panel/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/Content/Panel/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/Content/Panel/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="~/Content/Panel/assets/libs/feather-icons/feather.min.js"></script>

    <!-- App js -->
    <script src="~/Content/Panel/assets/js/app.min.js"></script>

</body>

</html>