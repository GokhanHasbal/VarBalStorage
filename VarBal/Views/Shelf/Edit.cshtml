@using VarBal.Models;
@model Shelf
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    var image = string.IsNullOrEmpty(Model.Image) ? "default-shelf.png" : Model.Image;

}
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">Edit Shelf</h4>
                            <p class="sub-header">
                                Edit Shelf
                            </p>

                            <div class="row">
                                <div class="col-lg-6">
                                    <form method="post" action="~/Shelf/Edit" enctype="multipart/form-data">

                                        <div class="mb-3">
                                            <img src="~/Content/images/ShelfImage/@image" class="w-100 mt-3" />
                                            <br />
                                            <input type="file" class="form-control mt-3" name="Image" id="Image" />

                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Name</label>
                                            <input type="text" class="form-control" id="Name" name="Name" required value="@Model.Name">
                                        </div>
                                        <div class="mb-3">
                                            <label for="Description" class="form-label">Description</label>
                                            <textarea id="Description" name="Description" class="form-control" required rows="3">@Model.Description</textarea>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label"> Shelf</label>
                                            <select class="form-control" name="MainShelfId" id="MainShelfId">
                                                @if (Model.MainShelfId != 0)
                                                {
                                                    <option value="@Model.MainShelfId"> @ViewBag.mainshef</option>
                                                }

                                                <option value="0">Non sub shelf</option>

                                                <optgroup>
                                                    @foreach (var item in ViewBag.shelf)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </optgroup>

                                            </select>
                                        </div>



                                        <div class="form-check mb-2 form-check-success">
                                            <input class="form-check-input" type="checkbox" checked="@Model.Status" value="true" id="Status" name="Status">
                                            <label class="form-check-label" for="customckeck1">Status</label>
                                        </div>



                                        <input type="hidden" value="@Model.Id" name="Id" id="Id" />



                                        <button class="btn btn-success" type="submit"> Edit</button>

                                    </form>
                                </div> <!-- end col -->
                                <div class="col-md-6 text-center">
                                    <h3>Edit Shelf</h3>
                                    <p>Please add your information accordingly</p>
                                    <h4>@ViewBag.mesaj</h4>
                                </div>
                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>



