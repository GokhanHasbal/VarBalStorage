@using VarBal.Models;
@model List<Vehicle>
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    int i = 0;
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">



            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <div class="row">

                                <div class="col-12 mb-3">
                                    <h4 class="mt-0 header-title">Vehicle List</h4>
                                    <p class="text-muted font-14 mb-3 float-start">
                                        Sahip olduğumuz
                                    </p>
                                    <a class="btn btn-success float-end" href="~/Vehicle/Add"><i class="fa fa-plus"></i> Vehicle Add</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Name</th>
                                                <th>License Plate</th>
                                                <th>Type</th>
                                                <th>Status</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                i++;

                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.Name</td>
                                                    <td>@item.LicensePlate</td>
                                                    <td>@item.Type</td>

                                                    @{var status = item.Status == true ? "btn-success" : "btn-danger"; }
                                                    <td><a href="~/Vehicle/VehicleStatusEdit?id=@item.Id" class="btn  @status">@item.Status</a></td>

                                                    <td>
                                                        <a href="~/Vehicle/Edit?id=@item.Id" class="btn btn-success"><i class="mdi mdi-folder-star"></i></a>
                                                        <a href="~/Vehicle/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

