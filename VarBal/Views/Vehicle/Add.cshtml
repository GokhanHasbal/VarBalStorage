
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">Vehicle Add</h4>
                            <p class="sub-header">
                                Fill in fields to add a new vehicle
                            </p>

                            <div class="row">
                                <div class="col-lg-6">
                                    <form method="post" action="~/Vehicle/Add">

                                        <div class="mb-3">
                                            <label for="Name" class="form-label">Name</label>
                                            <input type="text" id="Name" name="Name" class="form-control" required>
                                        </div>   
                                        <div class="mb-3">
                                            <label for="Name" class="form-label">License Plate Number</label>
                                            <input type="text" id="LicensePlate" name="LicensePlate" class="form-control" required>
                                        </div>  
                                        <div class="mb-3">
                                            <label for="Name" class="form-label">Type of the Vehicle</label>
                                            <input type="text" id="Type" name="Type" class="form-control" required>
                                        </div>
                                        <div class="form-check mb-2 form-check-success">
                                            <input class="form-check-input" type="checkbox" value="true" id="Status" name="Status" checked="">
                                            <label class="form-check-label" for="customckeck1">Status</label>
                                        </div>
                                        <button class="btn btn-success" type="submit">Add New Vehicle</button>
                                    </form>
                                </div> <!-- end col -->
                                <div class="col-md-6 text-center">
                                    <h3>Add New Vehicle</h3>
                                    <p>Please add your information accordingly</p>
                                    <h2>@ViewBag.mesaj</h2>
                                </div>
                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>

