
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">Slider Add</h4>
                            <p class="sub-header">
                                Fill in fields to add a new slider
                            </p>

                            <div class="row">
                                <div class="col-lg-6">
                                    <form method="post" action="~/Slider/Add">

                                        <div class="mb-3">
                                            <label for="Title" class="form-label">Title</label>
                                            <input type="text" id="Title" name="Title" class="form-control" required>
                                        </div>  
                                        <div class="mb-3">
                                            <label for="Link" class="form-label">Link</label>
                                            <input type="text" id="Link" name="Link" class="form-control" value="#" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="Description" class="form-label">Description</label>
                                            <textarea id="Description" name="Description" class="form-control" required rows="3"></textarea>
                                        </div>

                                        <div class="form-check mb-2 form-check-success">
                                            <input class="form-check-input" type="checkbox" value="true" id="Status" name="Status" checked="">
                                            <label class="form-check-label" for="customckeck1">Status</label>
                                        </div>

                                        <button class="btn btn-success" type="submit">Add New Slider</button>
                                    </form>
                                </div> <!-- end col -->
                                <div class="col-md-6 text-center">
                                    <h3>Add New Slider</h3>
                                    <p>Please add your information accordingly</p>
                                    <h2>@ViewBag.mesaj</h2>
                                </div>
                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>
