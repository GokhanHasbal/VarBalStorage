@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">  Add Employee</h4>
                            <p class="sub-header">

                            </p>
                            <a href="~/Home/Index" class="btn btn-info float-end  ">Go To HomePage</a>
                            <a href="~/ContacUs/" class="btn btn-warning  ">Go Back</a>


                            <div class="row">
                                <div class="col-lg-6">
                                    <form method="post" action="~/ContacUs/WorkerAdd" enctype="multipart/form-data">


                                        <div class="mb-3">
                                            <label class="form-label">Name and Surname</label>
                                            <input type="text" class="form-control" id="NameSurname" name="NameSurname" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Title</label>
                                            <input type="text" class="form-control" id="Title" name="Title" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="Description" class="form-label">Description</label>
                                            <textarea id="Description" name="Description" class="form-control" rows="7"></textarea>
                                        </div>

                                        <div class="form-check mb-2 form-check-success">
                                            <input class="form-check-input" type="checkbox" value="true" id="Status" name="Status" checked="">
                                            <label class="form-check-label" for="customckeck1">Status</label>
                                        </div>


                                        <button class="btn btn-success" type="submit"> Add</button>

                                    </form>
                                </div> <!-- end col -->
                                <div class="col-md-6 text-center">
                                    <h3>Add New Employee</h3>
                                    <p>Please add your information accordingly</p>
                                    <h4>@ViewBag.mesaj</h4>
                                </div>
                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>