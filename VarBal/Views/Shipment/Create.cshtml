@using VarBal.AdminModel;
@model ShipmentModel
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">Create a Shipment</h4>
                            <p class="sub-header">
                                Fill in fields to create a new shipment
                            </p>

                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="post" action="~/Shipment/Create">


                                        <div class="row">
                                            
                                            <div class="col-lg-6 mb-3">
                                                <label for="Description" class="form-label">Description</label>
                                                <textarea id="Description" name="Description" class="form-control" required rows="3"></textarea>

                                            </div>
                                            <div class="col-md-6 text-center">
                                                <h3>Create Shipment</h3>
                                                <p>Please add your information accordingly</p>
                                                <h2>@ViewBag.mesaj</h2>
                                            </div>
                                        </div>
                                       
                                       

                                        <div class="row">
                                            <div class="col-lg-6 mb-6">
                                                <label class="form-label">Sender</label>
                                                <select class="form-control" name="SenderId" id="SenderId">
                                                    <option value="0"></option>

                                                    @foreach (var item in Model.Warehouses)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-lg-6 mb-6">
                                                <label class="form-label">Receiver</label>
                                                <select class="form-control" name="ReceiverId" id="ReceiverId">
                                                    <option value="0"></option>

                                                    @foreach (var item in Model.Warehouses.Where(x => x.Id != 1))
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6 mb-6">
                                                <label class="form-label">Product</label>
                                                <select class="form-control" name="ProductId" id="ProductId">

                                                    @foreach (var item in Model.Products)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </select>
                                            </div>

                                            <div class="col-lg-6 mb-6 float-end">
                                                <label for="Stock" class="form-label">Stock</label>
                                                <input type="number" id="Stock" name="Stock" class="form-control" value="0" min="1" max="@Model.Products.FirstOrDefault(x=>x.Id==1).Stock" required>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6 mb-3">
                                                <label class="form-label">Şoförler</label>
                                                <select class="form-control" name="UserId" id="UserId">

                                                    @foreach (var item in Model.Users)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-lg-6 mb-6 ">
                                                <label class="form-label">Vehicle</label>
                                                <select class="form-control" name="VehicleId" id="VehicleId">

                                                    @foreach (var item in Model.Vehicles)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        
                                        <div class="col-lg-6 mb-6 ">
                                            <label class="form-label">Process</label>
                                            <select class="form-control" name="Process" id="Process">
                                                <option value="ok"> Sipariş Alındı </option>

                                                @*<option value="ready"> Sipariş Hazırlanıyor </option>
                        <option value="yolda"> Sipariş Yola Çıktı </option>
                        <option value="finish"> Teslim Edildi </option>*@
                                            </select>
                                        </div>
                               

                                        <button class="btn btn-success mt-3" type="submit">Add New Shelf</button>
                                    </form>
                                </div> <!-- end col -->
                               

                            </div>
                            <!-- end row-->
                         

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>

