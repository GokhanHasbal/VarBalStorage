@using VarBal.Models;
@model ContactUs
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title"><a href="~/Contact/">Contact List</a> - @Model.Email</h4>


                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <table class="table">


                                            <tr>
                                                <th>Name & Surname</th>
                                                <td>@Model.NameSurname</td>
                                            </tr>
                                            <tr>
                                                <th> Subject</th>
                                                <td>@Model.Subject</td>
                                            </tr>
                                            <tr>
                                                <th>Message</th>
                                                <td>@Model.Message</td>
                                            </tr>



                                        </table>
                                    </div>
                                    <form method="post" action="~/Contact/Detail">
                                        <div class="form-check mb-2 form-check-success">
                                            <input class="form-check-input" type="checkbox" value="true" id="Status" name="Status" checked="@Model.Status">
                                            <label class="form-check-label" for="customckeck1">Status</label>
                                        </div>
                                        <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                                        <button class="btn btn-success" type="submit"><i class="fa fa-paper-plane"></i> Status Change</button>
                                        <a href="~/Contact/Delete?id=@Model.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>

                                    </form>
                                </div> <!-- end col -->

                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>
